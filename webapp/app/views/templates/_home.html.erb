<p class="alert alert-info" ng-show="rosters.justSubmittedRoster">
  Your roster is looking great! Now that it's perfect, should we <a href="javascript://" class="btn btn-inverse" ng-click="rosters.openInviteFriends(rosters.justSubmittedRoster)">Challenge Friends</a> or enter another contest?
  <a href="#/" ng-click="rosters.reset()">No thanks, I'm done</a>
</p>

<div ng-hide="!rosters.mine().length" class="entries-container">
  <div class="roster-title">  
    <h3>Live Entries</h3>
  </div>
  
  <ul class="entries-info-list clearfix">
    <li class="ei-item">
      <p class="ei-number">{{rosters.mine().length}}</p>
      <span class="ei-info">Open Entries</span>
    </li>
    <li class="ei-item">
      <p class="ei-number">{{rosters.myLiveStats().top}}</p>
      <span class="ei-info">Top Score</span>
    </li>
    <li class="ei-item">
      <p class="ei-number">{{rosters.myLiveStats().avg}}</p>
      <span class="ei-info">Average Score</span>
    </li>
    <li class="ei-item">
      <p class="ei-number">{{rosters.myLiveStats().total_payout | centsToDollars | number: 2 | zeroIfEmpty}}</p>
      <span class="ei-info">Current Payout</span>
    </li>
  </ul>

  <a class="see-all" href="/#/rosters">See All Live Contests</a>

</div>

<div class="market-container" ng-class="{ roundTop: !rosters.top(3).length }">
  <div class="market-title">  
    <h3>Upcoming Contests</h3>
  </div>
  <div ng-include="'/market.html'"></div>
</div>
